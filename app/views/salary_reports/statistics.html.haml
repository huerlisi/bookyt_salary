= contextual_links

= boot_page_title

%table.table.table-bordered.table-striped.collection
  %thead
    %tr
      %th= t_attr :code, SalaryBookingTemplate
      %th= t_attr :title, SalaryBookingTemplate
      %th.right= t_attr :amount, SalaryBookingTemplate
  %tbody
    - @salary_booking_templates.each do |template|
      - amount = template.line_items.where(:date => @duration).sum(&:accounted_amount)
      - next if amount == 0
      %tr
        %td= template.code
        %td= template.title
        %td.currency= currency_fmt(amount)

- content_for :sidebar do
  - filters = (1..12).map do |month|
    - value = Date.new(Date.today.year, month, 1).to_s(:db)
    - { :value => value, :title => t('date.month_names')[month] }
  = boot_nav_filter(:date, filters)
